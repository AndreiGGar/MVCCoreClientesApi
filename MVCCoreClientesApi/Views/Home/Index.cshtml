@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h4>Cliente Api Core</h4>
    <button type="button" id="botonpersonas" class="btn btn-outline-dark mb-4">
        Cargar personas
    </button>
    <table id="tablapersonas" class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Edad</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            $("#botonpersonas").click(function() {
                var url = "https://apicorepersonas.azurewebsites.net/api/personas";
                $.ajax({
                    url: url,
                    method: "GET",
                    success: function(data) {
                        var html = "";
                        $.each(data, function(index, persona){
                            html += "<tr>";
                            html += "<td>" + persona.idPersona + "</td>";
                            html += "<td>" + persona.nombre + "</td>";
                            html += "<td>" + persona.email + "</td>";
                            html += "<td>" + persona.edad + "</td>";
                            html += "</tr>";
                            $("#tablapersonas tbody").html(html);
                        })
                    }
                });
            })
        });
    </script>
}